{{#section 'css'}}
<link rel="stylesheet" href="/public/static/css/course.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.css">
{{/section}}

<div class="dark-background">
  <div class="row">
    <div class="col-7">
      <div class="course-intro">
        <div class="component-render">
          {{#with this.course}}
          <h1 class="heading-primary">
            {{name}}
          </h1>
          <p>
            {{description}}
          </p>
          {{/with}}
          <div class="rating">
            <div class="rateYo" data-rateyo-rating="4.5" data-rateyo-star-width="30px"></div>
            <p class="mt-2">4.1 average based on 254 reviews.</p>
          </div>
        </div>
        <p>Created by Le Quoc Dat</p>

        <a href="#" class="btn btn-outline-primary" id="btnWishlist">
          Wishlist
          <i class="far fa-heart"></i>
        </a>
      </div>
    </div>
    <div class="buy-card">
      <div class="cardbody">
        <div class="img">
          <img src="/public/static/images/involve2.jpg" alt="course-img">
        </div>
        <div class="card-text">
          <p>
            <strong class="card-price">
              {{#with this.course}}
              ${{price}}
              {{/with}}
            </strong>
          </p>
          <div class="cart">
            <a href="#" class="btn btn-danger button-add mb-2">Add to cart</a>
            <a href="#" class="btn btn-outline-info button-add">Buy now</a>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

