<div class="p-2">
  <a class="ml-3" href="/course/{{course._id}}"><i class="fas fa-backward mr-2"></i>{{course.name}}</a>
</div>


<div class="row" style="min-height: 79vh;">
  <div class="col-sm-2 p-5">
    <h3>
      Lesson: {{lesson.title}}
    </h3>
  </div>

  <div class="col-sm-7">
    {{#if lesson.video}}
    <div class="container mt-4" style="width: 100%; height: 65vh;">
      <video id="my-video" class="video-js" controls preload="auto" style="width: 100%; height: 100%"
        poster="{{#if lesson.thumbnail}}{{lesson.thumbnail}}{{else}}{{course.thumbnail}}{{/if}}" data-setup="{}">
        <source src="{{lesson.video}}" type="video/mp4" />
        <p class="vjs-no-js">
          To view this video please enable JavaScript, and consider upgrading to a
          web browser that
          <a href="https://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
        </p>
      </video>
    </div>
    {{else}}
    <h5>This lesson doesn't have video</h5>
    {{/if}}

  </div>

  <div class="col-sm-3 p-3">
    <h3>
      Table of content
    </h3>
    {{#each chapterList}}
    <div class="card mt-2">
      <div class="card-header flip" style="cursor: pointer;">
        <div class="d-flex justify-content-between">
          <strong>{{title}}</strong>
          <i class="fas fa-angle-down"></i>
        </div>
      </div>
      <div class="card-body panel">
        <table class="table">
          {{#each list_lesson}}
          <tr>
            <td>
              <div class="d-flex justify-content-between">
                <div>
                  <i class="fas fa-play-circle"></i>
                  <a href="/course/{{../../course._id}}/{{this._id}}"><span class="card-text">{{title}}</span></a>
                </div>
                <div>
                  {{#if isFree}}
                  <img src="../../public/static/images/free.png" alt="free">
                  {{/if}}
                </div>
              </div>
            </td>
          </tr>
          {{/each}}
        </table>
      </div>
    </div>
    {{/each}}
  </div>
</div>