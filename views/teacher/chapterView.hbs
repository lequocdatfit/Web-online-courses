<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Lesson</h1>
  </div>

  <div class="mt-3 mb-3">
    <a class="btn btn-primary" href="/teacher/courses/{{courseId}}/{{chapter._id}}/AddLesson">Create new lesson</a>
  </div>
  <table class="table">
    <colgroup>
      <col span="1" style="width: 30%;">
      <col span="1" style="width: 40%;">
      <col span="1" style="width: 10%;">
      <col span="1" style="width: 10%;">
      <col span="1" style="width: 10%;">
    </colgroup>
    <tr>
      <th>Lesson</th>
      <th>Description</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
    {{#each chapter.list_lesson}}
    <tr>
      <td>{{title}}</td>
      <td>{{description}}</td>
      <td>
        <a class="btn btn-primary" href="#" role="button">Detail</a>
      </td>
      <td><a class="btn btn-secondary"
          href="/teacher/courses/{{../courseId}}/{{../chapter._id}}/{{this._id}}/EditLesson" role="button"><i
            class="fas fa-pencil-alt"></i></a></td>
      <form action="/teacher/courses/{{../courseId}}/{{../chapter._id}}/{{this._id}}/delete" method="post">
        <input type="hidden" name="id" value="{{this._id}}">
        <td><button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button></td>
      </form>
    </tr>


    {{/each}}
  </table>

</main>