{{#section 'css'}}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/css/fileinput.min.css">
{{/section}}

{{#section 'js'}}
<script src="https://cdn.tiny.cloud/1/nb1oddysrdqg1e2qqdbh3ahr6826ppmdbayfccoup0lra4b4/tinymce/5/tinymce.min.js"
  referrerpolicy="origin"></script>
<script>
  tinymce.init({
    selector: '#description'
  });
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/js/fileinput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/themes/fa/theme.min.js"></script>
<script>
  $('#course-thumbnail').fileinput({
    theme: 'fa',
    dropZoneEnabled: false,
    allowedFileExtensions: ['png', 'jpg', 'gif'],
  });
</script>
{{/section}}

<div class="container">
  <form method="POST" action="/teacher/addCourse">
    <div class="card mt-5">
      <h5 class="card-header">Add course</h5>
      <div class="card-body">
        <div class="form-group">
          <label for="course-title">Title</label>
          <input type="text" name="course-title" class="form-control" id="course-title" placeholder="Enter title">
        </div>
        <div class="form-group">
          <label for="course-category">Category</label>
          <select class="form-control" name="course-category" id="course-category">
            <option>Category 1</option>
            <option>Category 2</option>
            <option>Category 3</option>
          </select>
        </div>
        <div class="form-group">
          <label for="course-subcategory">Sub-category</label>
          <select class="form-control" name="course-subcategory" id="course-subcategory">
            <option>Sub-Category 1</option>
            <option>Sub-Category 2</option>
            <option>Sub-Category 3</option>
          </select>
        </div>
        <div class="form-group">
          <label for="short-desciption">Short description</label>
          <textarea class="form-control" name="short-desciption" id="short-desciption" rows="3"></textarea>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea rows="20" id="description" name="description"> </textarea>
        </div>
        <div class="form-group">
          <label for="course-price">Price</label>
          <input min="0" type="number" class="form-control" name="course-price" id="course-price"
            aria-describedby="helpId" placeholder="Price">
          <small id="helpId" class="form-text text-muted">Price in VND</small>
        </div>
        <div class="form-group">
          <label for="course-thumbnail">Thumbnail: </label>
          <input type="file" class="form-control-file" name="course-thumbnail" id="course-thumbnail"
            placeholder="Select" aria-describedby="fileHelpId">
          <small id="fileHelpId" class="form-text text-muted">PNG,JPG</small>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </form>
</div>