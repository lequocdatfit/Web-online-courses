<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
  <h1 class="h2 p-2">Edit category</h1>
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <form action="/admin/category/ChangeTopCategory/{{category._id}}" method="POST">
      <div class="form-group">
        <label for="inputName" class="col-sm-1-12 col-form-label">Category name: </label>
        <div class="col-sm-1-12">
          <input type="text" class="form-control" name="name" id="inputName" placeholder="Name"
            value="{{category.name}}" maxlength="30" required>
        </div>
      </div>
      <div class="form-group">
        <label for="inputDescription" class="col-sm-1-12 col-form-label">Description: </label>
        <div class="col-sm-1-12">
          <input type="text" class="form-control" name="description" id="inputDescription" placeholder="Description"
            value="{{category.description}}">
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Change</button>
    </form>
  </div>

</main>