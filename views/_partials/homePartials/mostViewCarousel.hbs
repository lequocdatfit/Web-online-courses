<div class="category-carousel2">
    <div class="carousel-container2">
        <div class="carousel-inner">
            <div class="track2">
                {{#each tenViewCourses}}
                <div class="card-container" style="height: 380px;">
                    <div class="card">
                        <div class="img">
                            <img src="{{thumbnail}}" alt="course_image" style="height: 150px;">
                        </div>
                        <div class="info">
                            <div class="card__title">{{name}}</div>
                            <div class="card_teacher">{{teacher.fullname}}</div>
                            <div class="card__category">{{category.name}}</div>
                            <div class="rating mb-2">
                                <div class="rateYo" data-rateyo-rating="{{avgRating}}" data-rateyo-star-width="20px">
                                </div>

                            </div>
                            <div class="card__price">$ {{price}}</div>
                        </div>
                        <div class="card-button">
                            {{#if isStudent}}
                            <a class="btn btn-success mr-3 card-button__details" href="/course/{{_id}}">
                                Go to course</a>
                            {{else}}
                            <a class="btn btn-primary mr-3 card-button__details" href="/course/{{_id}}">
                                Details</a>
                            <form method="POST" action="/cart/add">
                                <input type="hidden" value="{{_id}}" name="courseId" />
                                <button class="btn btn-success card-button__cart" type="submit">Add to cart</button>
                            </form>
                            {{/if}}
                            <a </a>
                        </div>
                    </div>


                </div>
                {{/each}}


            </div>
        </div>
        <div class="nav2">
            <button class="prev2">
                <i class="fa fa-arrow-circle-left " aria-hidden="true"></i>
            </button>
            <button class="next2">
                <i class="fa fa-arrow-circle-right" aria-hidden="true"></i>
            </button>
        </div>
    </div>
</div>