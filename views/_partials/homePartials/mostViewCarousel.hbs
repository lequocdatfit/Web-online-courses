<div class="category-carousel2">
    <h2 class="carousel-title">Most view courses</h2>
    <div class="carousel-container2">
        <div class="carousel-inner">
            <div class="track2">
                {{#each tenViewCourses}}
                <div class="card-container">
                    <div class="card">
                        <div class="img">
                            <img src="{{thumbnail}}" alt="course_image">
                        </div>
                        <div class="info">
                            <div class="card__title">
                                <p>{{name}}</p>
                            </div>
                            <div class="card__teacher">
                                <p>{{teacher.fullname}}</p>
                            </div>
                            <div class="card__category">
                                <p>{{category.name}}</p>
                            </div>
                            <div class="rating">
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                            </div>
                            <div class="card__allprice"><span class="card__discount">${{discount}}</span> &nbsp; <del
                                    class="card__price">${{price}}</del></div>
                        </div>
                        <div class="card-button">
                            {{#if isStudent}}
                            <a class="btn btn-success mr-3 card-button__details" href="/course/{{_id}}">
                                Go to course</a>
                            {{else}}
                            <a class="btn btn-primary mr-3 card-button__details" href="/course/{{_id}}">
                                Detail</a>
                            <form method="POST" action="/cart/add">
                                <input type="hidden" value="{{_id}}" name="courseId" />
                                <button class="btn btn-success card-button__cart" type="submit">
                                    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                </button>
                            </form>
                            {{/if}}
                        </div>
                    </div>


                </div>
                {{/each}}


            </div>
        </div>
        <div class="nav2">
            <button class="prev2">
                <i class="fa fa-arrow-circle-left " aria-hidden="true"></i>
            </button>
            <button class="next2">
                <i class="fa fa-arrow-circle-right" aria-hidden="true"></i>
            </button>
        </div>
    </div>
</div>