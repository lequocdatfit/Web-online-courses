<div class="all-categories-container container-fluid ms-3">
    <h2 class="carousel-title">Top categories</h2>
    <div class="row row-cols-1 row-cols-md-2">
        {{#each tenWeeklyCategories}}
        <div class="col mb-4">
            <div class="card">
                <div class="card-body">

                    <h5 class="">
                        <a href="/category/{{_id}}">
                            {{name}}
                        </a>
                    </h5>
                    <p class="card-text">{{description}}</p>
                </div>
            </div>

        </div>
        {{/each}}

    </div>
</div>